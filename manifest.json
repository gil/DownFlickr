{
  "manifest_version": 2,
  "name": "DownFlickr - Flickr Downloader",
  "version": "0.6.2",
  "description": "Flickr photos downloader extension.",

  "icons": {
    "16"  : "icon16.png",
    "48"  : "icon48.png",
    "128" : "icon128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19" : "icon19.png",
      "38" : "icon38.png"
    },
    "default_title": "DownFlickr",
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://*.flickr.com/",
    "tabs",
    "downloads"
  ]

}